@using Recore.Service.DTOs.Products;
@model ProductViewModel

<div class="mt-3">
    <div class="row-2">
        <div style="-ms-overflow-style: auto; scrollbar-width:auto">
            @foreach(var item in Model.Categories)
            {
                <button type="button" class="btn button">@item.Name</button>
            }
        </div>
    </div>
    <div class="row-10">
        <div class="row mt-5">
            @foreach (var productItem in Model.Products)
            {
                <div class="col-3 mb-6">
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <img src="@productItem.Attachment.FilePath" class="img-fluid" />
                            <a href="#!">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">  
                                <div class="col">
                                    <h5 class="card-title">@productItem.Name</h5>
                                </div>
                                <div class="col">
                                    <h5><span class="badge badge-primary float-end me-2">Top</span></h5>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col">
                                    <p class="card-text">@productItem.Price so'm</p>
                                </div>
                                <div class="col ">
                                    <p class="card-text float-end me-2">-@productItem.Discount%</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <a class="btn btn-primary"
                                       data-mdb-toggle="modal"
                                       data-mdb-target="#exampleModal"
                                       style="background-color:#30704c; font-size:60%">Description</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-primary" style="background-color:#30704c; font-size:60%">Add to cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .button {
        text-align: center;
        cursor: pointer;
        outline: none;
        color: #fff;
        background-color: #30704c;
        border: none;
    }

    .button:active {
        transform: translateY(4px);
    }
</style>



<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">...</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>